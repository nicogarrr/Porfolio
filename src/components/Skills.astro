---
// Definir categorías de habilidades
const SKILLS = [
  {
    title: "Ciencia de Datos & Machine Learning",
    skills: [
      "Python",
      "Pandas",
      "NumPy",
      "Scikit-learn",
      "TensorFlow",
      "PyTorch",
      "Modelos Supervisados",
      "Modelos No Supervisados",
      "Series Temporales"
    ]
  },
  {
    title: "IA Generativa & LLMs",
    skills: [
      "OpenAI API",
      "Langchain",
      "Embeddings",
      "RAG",
      "Fine-tuning",
      "Prompt Engineering",
      "Gen AI",
      "Hugging Face"
    ]
  },
  {
    title: "IoT & Sistemas Embebidos",
    skills: [
      "ESP32",
      "Sistemas de Posicionamiento Indoor",
      "Sensores",
      "Microcontroladores",
      "MQTT",
      "Procesamiento de Señales",
      "Bluetooth Low Energy",
      "Protocolos Inalámbricos"
    ]
  },
  {
    title: "Bases de Datos & Big Data",
    skills: [
      "SQL",
      "PostgreSQL",
      "MongoDB",
      "Redis",
      "Apache Spark",
      "Hadoop",
      "ETL",
      "Data Warehousing"
    ]
  },
  {
    title: "Desarrollo Web & Visualización",
    skills: [
      "Streamlit",
      "Power BI",
      "Tableau",
      "HTML/CSS",
      "JavaScript",
      "React",
      "D3.js",
      "Plotly"
    ]
  },
  {
    title: "Cloud & DevOps",
    skills: [
      "AWS",
      "Azure",
      "Docker",
      "Git",
      "CI/CD",
      "Linux",
      "REST APIs",
      "Microservicios"
    ]
  }
];
---

<section class="mt-16">
  <h2 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-700 mb-6">Habilidades Técnicas</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {SKILLS.map((category) => (
      <div class="bg-white dark:bg-gray-800/30 rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:translate-y-[-5px]">
        <h3 class="text-lg font-semibold text-indigo-600 dark:text-indigo-400 mb-4">{category.title}</h3>
        <div class="flex flex-wrap gap-2">
          {category.skills.map((skill) => (
            <span class="skill-chip px-3 py-1 text-sm font-medium bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-full text-indigo-700 dark:text-indigo-300 border border-indigo-100 dark:border-indigo-800">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    if (window.anime) {
      window.anime({
        targets: '.skill-chip',
        opacity: [0,1],
        scale: [0.6,1],
        delay: window.anime.stagger(70),
        easing: 'spring(1, 80, 10, 0)',
        duration: 600
      });
      document.querySelectorAll('.skill-chip').forEach(el => {
        el.addEventListener('mouseenter', () => {
          window.anime.remove(el);
          window.anime({ targets: el, scale: 1.1, duration: 300, easing: 'easeOutBack' });
        });
        el.addEventListener('mouseleave', () => {
          window.anime.remove(el);
          window.anime({ targets: el, scale: 1, duration: 300, easing: 'easeOutBack' });
        });
      });
    }
  });
</script>
