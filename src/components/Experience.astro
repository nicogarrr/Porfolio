---
import ExperienceItem from "./ExperienceItem.astro"
const EXPERIENCE = [
  {
    date: "Noviembre 2024 - Actualidad",
    year: "Actualidad",
    title: "Supply Chain & Operations Analytics Intern",
    company: "Accenture",
    description:
      "Optimicé procesos en la cadena de suministro aplicando técnicas avanzadas de ciencia de datos. Desarrollé aplicaciones y scripts utilizando PyCharm, implementando pruebas unitarias e integración. Diseñé y desarrollé una aplicación web full-stack con Streamlit, integrando un chatbot de IA. Creé dashboards interactivos en Power BI para visualizar KPIs.",
    link: "#",
    technologies: ["Python", "Power BI", "Streamlit", "Machine Learning", "Git"],
    achievements: [
      "Reducción del 15% en tiempos de procesamiento de pedidos",
      "Implementación exitosa de un sistema de predicción de demanda",
      "Desarrollo de un chatbot de IA para consultas de inventario en tiempo real"
    ]
  },
  {
    date: "Junio 2023 - Agosto 2023",
    year: "2023",
    title: "Intern",
    company: "Merkle",
    description:
      "Contribuí en proyectos basados en datos, mejorando procesos y proporcionando insights accionables para la optimización de recursos. Trabajé con un equipo multidisciplinar en el análisis y visualización de datos de marketing digital.",
    technologies: ["SQL", "Excel", "Python", "Tableau"],
    achievements: [
      "Automatización de informes semanales reduciendo el tiempo de generación en un 40%",
      "Desarrollo de dashboards para seguimiento de campañas de marketing"
    ]
  },
  {
    date: "Junio 2022 - Agosto 2022",
    year: "2022",
    title: "Intern",
    company: "Merkle",
    description:
      "Apliqué técnicas de análisis de datos en proyectos reales, colaborando con equipos multidisciplinares para resolver desafíos empresariales. Participé en la recopilación, limpieza y análisis de datos para campañas de marketing.",
    technologies: ["Excel", "SQL", "Power BI"],
    achievements: [
      "Participación en el análisis de datos de 3 campañas de marketing",
      "Creación de visualizaciones para presentaciones a clientes"
    ]
  },
]
---

<div class="flex flex-col gap-y-8 mt-16">
  <!-- Barra de tiempo vertical con gradiente -->
  <div class="relative">
    <div class="absolute left-28 md:left-36 top-0 bottom-0 w-1.5 bg-gradient-to-b from-indigo-600 via-purple-500 to-pink-500 rounded-full"></div>
    
    <!-- Experiencias -->
    {
      EXPERIENCE.map((experience, index) => (
        <div class="flex mb-16 relative">
          <!-- Año a la izquierda -->
          <div class="w-28 md:w-36 flex items-center justify-end pr-8 shrink-0 relative">
            <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-500 to-purple-600">
              {experience.year}
            </span>
            
            <!-- Punto en la línea de tiempo alineado con el año -->
            <div class="absolute right-0 top-1/2 transform translate-x-1/2 -translate-y-1/2 w-7 h-7 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full border-4 border-white dark:border-gray-900 z-10 animate-pulse-slow"></div>
          </div>
          
          <!-- Contenido de la experiencia -->
          <div class="bg-white dark:bg-gray-800/30 rounded-lg shadow-md p-6 ml-6 flex-grow transition-all duration-300 hover:shadow-xl border border-gray-100 dark:border-gray-700">
            <div class="mb-1 text-sm font-normal text-gray-500 dark:text-gray-400">{experience.date}</div>
            <ExperienceItem {...experience} />
            
            {experience.technologies && (
              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-600 dark:text-gray-300">Tecnologías:</h4>
                <div class="flex flex-wrap gap-2 mt-2">
                  {experience.technologies.map((tech) => (
                    <span class="px-2 py-1 text-xs font-medium bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-full text-indigo-700 dark:text-indigo-300 border border-indigo-100 dark:border-indigo-800">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            {experience.achievements && (
              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-600 dark:text-gray-300">Logros:</h4>
                <ul class="list-disc pl-5 text-sm text-gray-600 dark:text-gray-400 mt-2">
                  {experience.achievements.map((achievement) => (
                    <li>{achievement}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 1;
      transform: translate(50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(50%, -50%) scale(1.05);
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @media (hover: hover) {
    div[class*="bg-white"] {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    div[class*="bg-white"]:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
    
    div[class*="bg-white"]:hover::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(to bottom, #6366f1, #a855f7, #ec4899);
    }
  }
</style>
